{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "capi/node_modules/@types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "extends": "./tsconfig.base.json",
  "include": [
    "capi",
    "client",
    "tasks"
  ]
}