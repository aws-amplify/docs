{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "capi/node_modules/@types"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/constants/*": ["src/constants/*"],
      "@/data/*": ["src/data/*"],
      "@/plugins/*": ["src/plugins/*"],
      "@/protected/*": ["src/protected/*"],
      "@/themes/*": ["src/themes/*"],
      "@/utils/*": ["src/utils/*"],
      "@/directory/*": ["src/directory/*"]
    }
  },
  "extends": "./tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    "mdx-components.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.mdx",
    "tasks",
    "adobe.d.ts",
    "jest.setup.ts"
  ],
  "mdx": {
    "checkMdx": true,
    "plugins": ["remark-gfm"]
  }
}
