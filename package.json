{
  "name": "docs",
  "version": "2.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/aws-amplify/docs.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "analyze": "ANALYZE=true yarn next-build",
    "prebuild": "node src/directory/generateDirectory.mjs && node src/directory/generateFlatDirectory.mjs",
    "build": "node tasks/generate-sitemap.mjs && next build",
    "build:release": "yarn build && next-image-export-optimizer --exportFolderPath client/www/next-build",
    "clean": "rm -rf node_modules yarn.lock",
    "dev": "yarn prebuild && next dev",
    "format": "prettier --write .",
    "lint": "eslint .",
    "next-build": "next build",
    "next-start": "next start",
    "prepare": "husky install",
    "refresh": "yarn clean && yarn",
    "spellcheck": "cspell \"src/**/*.mdx\" --no-progress",
    "spellcheck-diff": "git diff --name-only --cached | awk \"/src.*\\.mdx/{print}\" | npx cspell --no-must-find-files --file-list stdin",
    "test": "jest"
  },
  "lint-staged": {
    "**/*.(ts|tsx|js|css|mjs|mdx|md)": [
      "prettier --list-different",
      "eslint"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "printWidth": 80,
    "proseWrap": "never",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "extraFileExtensions": [
        ".astro",
        ".svelte"
      ],
      "project": "./tsconfig.eslint.json"
    },
    "settings": {
      "import/resolver": {
        "typescript": {},
        "node": {}
      }
    },
    "plugins": [
      "@typescript-eslint",
      "github",
      "jsx-a11y"
    ],
    "extends": [
      "next/core-web-vitals",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-exports": [
        "error",
        {
          "fixMixedExportsWithInlineTypeSpecifier": false
        }
      ],
      "@typescript-eslint/consistent-type-imports": [
        "error",
        {
          "prefer": "type-imports"
        }
      ],
      "github/array-foreach": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-default-export": "error",
      "import/order": [
        "error",
        {
          "newlines-between": "never",
          "groups": [
            "type",
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index",
            "object"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.config.js",
          "*.config.ts",
          "*.config.mjs",
          "*.config.cjs",
          "*.tsx"
        ],
        "rules": {
          "import/no-default-export": "off"
        }
      }
    ],
    "ignorePatterns": [
      ".next",
      ".husky",
      "node_modules"
    ],
    "root": true
  },
  "resolutions": {
    "**/trim": "0.0.3",
    "@adobe/css-tools": "4.3.2",
    "@babel/core": "^7.23.2",
    "@babel/traverse": "^7.23.2",
    "aws-cdk-lib": "2.80.0",
    "decode-uri-component": "0.2.1",
    "fast-xml-parser": "4.2.5",
    "follow-redirects": "^1.15.4",
    "loader-utils": "2.0.4",
    "minimatch": "3.1.2",
    "prismjs": "^1.27.0",
    "semver": "7.5.2",
    "tough-cookie": "4.1.3"
  },
  "dependencies": {
    "@aws-amplify/amplify-cli-core": "^4.2.10",
    "@aws-amplify/ui-react": "^6.0.7",
    "@docsearch/react": "3",
    "aws-amplify": "^6.0.9",
    "next": "^13.5.6",
    "next-image-export-optimizer": "^1.8.3",
    "next-transpile-modules": "^9.0.0",
    "parse-imports": "^1.1.0",
    "prism-react-renderer": "^2.1.0",
    "prismjs": "^1.27.0",
    "react": "^18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1"
  },
  "devDependencies": {
    "@mdx-js/loader": "^2.3.0",
    "@mdx-js/mdx": "^2.3.0",
    "@mdx-js/react": "^2.3.0",
    "@next/bundle-analyzer": "^13.5.3",
    "@next/mdx": "^13.5.4",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^13.5.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^12.12.9",
    "@types/react": "^18.0.0",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "axios": "^1.3.4",
    "classnames": "^2.3.2",
    "cross-env": "^7.0.3",
    "cspell": "^6.2.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^9.0.1",
    "git-jiggy": "1.1.1",
    "husky": "^8.0.1",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "json5": "^2.2.3",
    "lint-staged": "^14.0.0",
    "next-bundle-analyzer": "^0.6.7",
    "prettier": "^3.2.2",
    "prettier-plugin-packagejson": "^2.4.9",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "puppeteer": "^20.8.2",
    "rehype": "^11.0.0",
    "rehype-img-size": "^1.0.1",
    "rehype-mdx-code-props": "^2.0.0",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.0",
    "remark-mdx": "^2.3.0",
    "remark-mdx-searchable": "^0.1.3",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "sass": "^1.54.8",
    "serve": "^14.2.1",
    "svelte": "^4.2.8",
    "tiny-glob": "0.2.9",
    "ts-jest": "^26.0.3",
    "ts-node": "^8.5.0",
    "typescript": "^5.3.3",
    "unist-util-visit": "^4.1.0"
  }
}
